<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".TahminActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 ile 100 aras覺nda bir tahmin yap覺n覺z"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#4CAF50"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewKalanHak"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Kalan Hak:"
        android:textColor="#E10404"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textViewGirilenSayi"
        android:layout_width="196dp"
        android:layout_height="52dp"
        android:textColor="#3F51B5"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewYardim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextGirdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Say覺 Giriniz"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/buttonTahmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#D60000"
        android:backgroundTint="#CD0E0E"
        android:text="Tahmin Et"
        android:textColorHighlight="#FF0707"
        android:textSize="20sp" />

</LinearLayout>